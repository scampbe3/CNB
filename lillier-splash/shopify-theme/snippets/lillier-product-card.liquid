{%- if product == blank -%}
  <article class="lillier-product-card is-placeholder">
    <div class="lillier-product-card__media">
      {{ 'product-1' | placeholder_svg_tag }}
    </div>
    <div class="lillier-product-card__body">
      <h3 class="lillier-product-card__title">Product title</h3>
      <p class="lillier-product-card__price">$0.00</p>
    </div>
  </article>
{%- else -%}
  <article class="lillier-product-card">
    <a class="lillier-product-card__media" href="{{ product.url }}">
      {% render 'lillier-media', image: product.featured_image, alt: product.title, class: 'lillier-product-card__image' %}
    </a>
    <div class="lillier-product-card__body">
      <h3 class="lillier-product-card__title">
        <a href="{{ product.url }}">{{ product.title }}</a>
      </h3>
      <p class="lillier-product-card__price">{{ product.price | money }}</p>
      {%- if product.available -%}
        <p class="lillier-product-card__availability">In stock</p>
      {%- else -%}
        <p class="lillier-product-card__availability is-sold-out">Sold out</p>
      {%- endif -%}
    </div>
  </article>
{%- endif -%}
