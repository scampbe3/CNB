{%- capture category_content -%}
  {% render 'lillier-eyebrow', text: section.settings.eyebrow %}
  <h2 class="lillier-heading lillier-heading--lg">{{ section.settings.heading }}</h2>
  {%- if section.settings.intro != blank -%}
    <p class="lillier-body">{{ section.settings.intro }}</p>
  {%- endif -%}
  <div class="lillier-category-grid">
    {%- for block in section.blocks -%}
      {%- assign item_collection = block.settings.collection_ref -%}
      {%- assign fallback_image = '' -%}
      {%- case forloop.index -%}
        {%- when 1 -%}
          {%- assign fallback_image = 'lillier-branding-04.jpg' -%}
        {%- when 2 -%}
          {%- assign fallback_image = 'lillier-branding-05.jpg' -%}
        {%- when 3 -%}
          {%- assign fallback_image = 'lillier-branding-06.jpg' -%}
        {%- when 4 -%}
          {%- assign fallback_image = 'lillier-branding-02.jpg' -%}
        {%- when 5 -%}
          {%- assign fallback_image = 'lillier-branding-03.jpg' -%}
        {%- else -%}
          {%- assign fallback_image = 'lillier-branding-04.jpg' -%}
      {%- endcase -%}
      <article class="lillier-category-card" {{ block.shopify_attributes }}>
        <a class="lillier-category-card__media" href="{{ item_collection.url | default: '#' }}">
          {% if block.settings.image_override != blank %}
            {% render 'lillier-media', image: block.settings.image_override, alt: block.settings.label_override %}
          {% elsif item_collection.featured_image != blank %}
            {% render 'lillier-media', image: item_collection.featured_image, alt: item_collection.title %}
          {% else %}
            <img
              src="{{ fallback_image | asset_url }}"
              alt="{{ block.settings.label_override | default: item_collection.title | default: 'Collection' | escape }}"
              loading="lazy"
              width="1200"
              height="900"
            >
          {% endif %}
        </a>
        <div class="lillier-category-card__body">
          <h3 class="lillier-heading">{{ block.settings.label_override | default: item_collection.title | default: 'Collection' }}</h3>
          {%- if block.settings.support_text != blank -%}
            <p class="lillier-body">{{ block.settings.support_text }}</p>
          {%- endif -%}
        </div>
      </article>
    {%- else -%}
      <article class="lillier-category-card">
        <div class="lillier-category-card__body">
          <h3 class="lillier-heading">Add category cards</h3>
          <p class="lillier-body">Choose collections to create utility-first browse paths.</p>
        </div>
      </article>
    {%- endfor -%}
  </div>
  {%- if section.settings.cta_label != blank and section.settings.cta_url != blank -%}
    <div class="lillier-btn-group">
      {% render 'lillier-button', label: section.settings.cta_label, url: section.settings.cta_url %}
    </div>
  {%- endif -%}
{%- endcapture -%}

{% render 'lillier-section-shell', section_id: section.id, classes: 'lillier-category-shell', content: category_content %}

{% schema %}
{
  "name": "Lillier Category Rail",
  "settings": [
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow",
      "default": "Shop by category"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Find what you need quickly"
    },
    {
      "type": "textarea",
      "id": "intro",
      "label": "Intro",
      "default": "Browse by category while discovering independent brands."
    },
    {
      "type": "text",
      "id": "cta_label",
      "label": "CTA label",
      "default": "View all collections"
    },
    {
      "type": "url",
      "id": "cta_url",
      "label": "CTA URL"
    }
  ],
  "blocks": [
    {
      "type": "category_card",
      "name": "Category card",
      "settings": [
        {
          "type": "collection",
          "id": "collection_ref",
          "label": "Collection"
        },
        {
          "type": "text",
          "id": "label_override",
          "label": "Label override"
        },
        {
          "type": "text",
          "id": "support_text",
          "label": "Support text"
        },
        {
          "type": "image_picker",
          "id": "image_override",
          "label": "Image override"
        }
      ]
    }
  ],
  "max_blocks": 8,
  "presets": [
    {
      "name": "Lillier Category Rail",
      "blocks": [
        { "type": "category_card" },
        { "type": "category_card" },
        { "type": "category_card" }
      ]
    }
  ]
}
{% endschema %}
