<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="theme-color" content="#d8a300">
    <link rel="canonical" href="{{ canonical_url }}">

    {%- if settings.favicon != blank -%}
      <link rel="icon" type="image/png" href="{{ settings.favicon | image_url: width: 64, height: 64 }}">
    {%- endif -%}

    <title>
      {{ page_title }}
      {%- if current_tags %} | tagged "{{ current_tags | join: ', ' }}"{% endif -%}
      {%- if current_page != 1 %} | Page {{ current_page }}{% endif -%}
      {%- unless page_title contains shop.name %} | {{ shop.name }}{% endunless -%}
    </title>

    {%- if page_description -%}
      <meta name="description" content="{{ page_description | escape }}">
    {%- endif -%}

    {{ content_for_header }}
    {{ 'lillier-tokens.css' | asset_url | stylesheet_tag }}
    {{ 'lillier-critical.css' | asset_url | stylesheet_tag }}
    {{ 'lillier-core.css' | asset_url | stylesheet_tag }}
  </head>
  <body class="lillier-theme page-{{ request.page_type }}">
    <a class="skip-link" href="#MainContent">Skip to content</a>

    <main id="MainContent" class="lillier-main-content" role="main" tabindex="-1">
      {{ content_for_layout }}
    </main>

    {{ 'lillier-core.js' | asset_url | script_tag }}
  </body>
</html>
